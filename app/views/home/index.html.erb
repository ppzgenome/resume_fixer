                  <div id="resumes" class="form-group">
                    <%= f.label :resumes %>
                    <%= f.file_field :resumes, multiple: true, type: :file, class: 'form-control submission_file resume' %>
                  </div>
                  <div id="essays" class="form-group">
                    <%= f.label :essays %>
                    <%= f.file_field :essays, multiple: true, type: :file, class: 'form-control submission_file essay' %>
                  </div>
                </div>

                <div class="row total-price">
                  <h4>Total Price: <span id="total_price">0</span></h4>
                </div>  

                <div class='row text-center'>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="Submit Documents"></script>
                </div>
              <% end %>
            </div>
        </div>
    </div>
</section>

